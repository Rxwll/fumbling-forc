---
import "../styles/global.css";
import Bgpaquete1 from "../assets/imagenes/bg-paquete1.jpeg?url";
import pImg1 from "../assets/imagenes/paquete11.jpeg";
import pImg2 from "../assets/imagenes/paquete12.jpeg";
import pImg3 from "../assets/imagenes/paquete13.jpeg";
import pImg4 from "../assets/imagenes/paquete14.jpeg";
import ProductosSwiper from "./paquete-swiper.astro";

const paquete1Imgs = [pImg1, pImg2, pImg3, pImg4];
---

<section class="w-full">
  <div
    class="flex flex-col h-[800px] w-full bg-cover bg-center"
    style={`background-image: url(${Bgpaquete1});`}
  >
    <div class="text-white items-center m-10 space-y-10">
      <h1 class="w-full text-center font-bold text-2xl">
        Paquete Potencia Total
      </h1>
      <p class="font-medium">
        Eleva tu entrenamiento al siguiente nivel con energía explosiva y fuerza
        real. Incluye bebida energética GRATIS por lanzamiento.
      </p>

      <ProductosSwiper imagenes={paquete1Imgs} />

      <div class="flex flex-row">
        <ul role="list" class="font-medium list-disc space-y-1 pl-6">
          <li>Creatina monohidratada (3RUN Creatina Monohidratada)</li>
          <li>Pre-entreno en polvo (Essential Pre-Workout)</li>
          <li>Electrolitos o BCAA (BPI Sports Best BCAA)</li>
          <li>
            Extra: 1 bebida energética Ghost o CBUM (gratis por lanzamiento)
          </li>
        </ul>
        <div class="flex-grow"></div>
        <p class="text-4xl font-extrabold py-10">De: $1,780 <br /> A: $1,550</p>
      </div>
    </div>
  </div>
</section>
